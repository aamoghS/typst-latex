% UF Gemini Theme

% ====================
% Definitions
% ====================

% Color Palette (based on UF Brand Guidelines)
\definecolor{ufblue}{HTML}{0021A5}
\definecolor{uforange}{HTML}{FA4616}
\definecolor{lightgray}{HTML}{D5EAFF}
\definecolor{darkgray}{RGB}{118, 118, 118}
\definecolor{black}{RGB}{0, 0, 0}
\definecolor{white}{RGB}{255, 255, 255}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=white,bg=ufblue}
\setbeamercolor{palette secondary}{fg=white,bg=ufblue}
\setbeamercolor{palette tertiary}{bg=uforange,fg=white}
\setbeamercolor{palette quaternary}{fg=white,bg=ufblue}
\setbeamercolor{structure}{fg=uforange}

% Headline
\setbeamercolor{headline}{fg=white,bg=ufblue}
\setbeamercolor{headline rule}{bg=uforange}

% Block
\setbeamercolor{block title}{fg=white,bg=uforange}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=black,bg=lightgray}
\setbeamercolor{block alerted separator}{bg=darkgray}
\setbeamercolor{block alerted body}{fg=black,bg=lightgray}

% Heading
\setbeamercolor{heading}{fg=ufblue}

% Itemize
\setbeamercolor{item}{fg=darkgray}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
\setbeamertemplate{bibliography entry article}{}
\setbeamertemplate{bibliography entry title}{}
\setbeamertemplate{bibliography entry location}{}
\setbeamertemplate{bibliography entry note}{}
